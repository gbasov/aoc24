{
    "name": "aoc24",
    "type": "module",
    "scripts": {
        "create:day": "new_dir=$(printf '%02d' $(($(ls -d [0-9][0-9] 2>/dev/null | sort -n | tail -n 1 | sed 's/^0*//') + 1))); mkdir $new_dir && cp -r tmpl/* $new_dir && echo \"Created day $new_dir\""
    },
    "dependencies": {
        "chalk": "^5.3.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.16.0",
        "@types/node": "^22.10.1",
        "eslint": "^9.16.0",
        "globals": "^15.13.0",
        "prettier": "^3.4.2",
        "tsx": "^4.19.2",
        "typescript-eslint": "^8.18.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
